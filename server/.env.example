# Server Configuration
PORT=5001

# MongoDB Configuration
# Use local MongoDB for enterprise (recommended)
MONGO_URI=mongodb://127.0.0.1:27017/chat_aziendale
# Or MongoDB Atlas for cloud
# MONGO_URI=mongodb+srv://<user>:<password>@cluster.xyz.mongodb.net/chat_aziendale

# JWT Secret - CHANGE THIS IN PRODUCTION!
JWT_SECRET=your_secret_key_here

# AI Provider Configuration
# Options: 'groq' (default, free) or 'openai' (production)
AI_PROVIDER=groq

# AI API Keys (provide one based on AI_PROVIDER)
GROQ_API_KEY=your_groq_api_key
# OPENAI_API_KEY=your_openai_api_key

# CORS Configuration (for production, specify allowed origin)
# Leave empty or "*" for development
CORS_ORIGIN=*
